generator client {
  provider = "prisma-client-js"
  output = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  nickname    String
  jti String  @default("")
  routines    Routine[]
  missions    Mission[]
  retrospects Retrospect[]
  moods       Mood[]
  createdAt   DateTime     @default(now())
}

model Routine {
  id     String @id @default(uuid())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Mission {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  title       String
  description String?
  category    String
  isCompleted Boolean   @default(false)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
}

model Retrospect {
  id        String          @id @default(uuid())
  user      User            @relation(fields: [userId], references: [id])
  userId    String
  content   String
  mood      Mood?           @relation(fields: [moodId], references: [id])
  moodId    String?
  tags      RetrospectTag[] // ✅ 관계로 변경
  createdAt DateTime        @default(now())
}

model RetrospectTag {
  id           String     @id @default(uuid())
  name         String
  retrospect   Retrospect @relation(fields: [retrospectId], references: [id])
  retrospectId String
}

model Mood {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  intensity Int
  createdAt DateTime @default(now())

  Retrospect Retrospect[]
}
