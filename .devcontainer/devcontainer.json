{
  "name": "TumTum Monorepo",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspace/tumtum-monorepo",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "packageManager": "pnpm"
    }
  },
  "postCreateCommand": "pnpm install && npx prisma generate",
  "forwardPorts": [3000, 3333]
}
